<section class="ml-8">
    <h2 class="font-light text-2xl">
        Survey Results
    </h2>
    <div id="survey-results-component">
        <div class="container">
            <div>
                <.form
                for={:age_group_filter}
                phx-change="age_group_filter"
                phx-target={@myself}
                id="gender-form">
                    <label>By age group:</label>
                    <select name="age_group_filter" id="age_group_filter">
                        <%= for age_group <- ["all", "18 and under", "18 to 25", "25 to 35", "35 and up"] do %>
                        <option value={age_group} select={@age_group_filter == age_group}>
                        <%= age_group %>
                        </option>
                        <% end %>
                    </select>
                </.form>
            </div>
        </div>
    </div>
    <div id="survey-results-chart">
        <%= @chart_svg %>
    </div>
</section>
